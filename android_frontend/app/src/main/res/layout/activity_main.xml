<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="12dp" />

        <!-- Actions Row -->
        <LinearLayout
            android:id="@+id/actionsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnImportModel"
                style="@style/Widget.Ocean.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_import_model"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/colorOnPrimary" />

            <Button
                android:id="@+id/btnSelectVideo"
                style="@style/Widget.Ocean.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/btn_select_video"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Selected items status -->
        <LinearLayout
            android:id="@+id/selectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/colorSurface">

            <TextView
                android:id="@+id/tvModelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_no_model"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/tvVideoStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_no_video"
                android:textColor="@color/colorOnSurface"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Start processing button -->
        <Button
            android:id="@+id/btnStartProcessing"
            style="@style/Widget.Ocean.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/btn_start_processing"
            android:enabled="false"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/colorOnPrimary" />

        <!-- Status header -->
        <TextView
            android:id="@+id/tvStatusHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_status_header"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Status list placeholder (ListView used to avoid extra dependencies) -->
        <ListView
            android:id="@+id/lvStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:paddingBottom="8dp" />

        <!-- Indeterminate progress -->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:contentDescription="@string/cd_progress" />

    </LinearLayout>

</LinearLayout>
